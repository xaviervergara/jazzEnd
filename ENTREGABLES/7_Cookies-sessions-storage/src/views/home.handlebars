<h1>Listado de productos</h1>
<div>
  {{#each products}}
    <div class='lista-productos'>
      <ul>
        {{#each this}}
          <li>
            <span class='label'>{{@key}}:</span>
            {{this}}
          </li>
        {{/each}}
      </ul>
    </div>
  {{/each}}
</div>

